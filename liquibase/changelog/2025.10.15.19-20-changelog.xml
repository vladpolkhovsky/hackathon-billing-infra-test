<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="create-table-tariffs" author="vpolkhovsky">
        <createTable schemaName="billing" tableName="tariffs">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>

            <column name="tariff_name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="call_price" type="double">
                <constraints nullable="false"/>
            </column>

            <column name="cpu_price" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="memory_price" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="actual" type="bool">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue schemaName="billing" tableName="tariffs" columnName="id" defaultValueComputed="uuidv7()"/>
        <addDefaultValue schemaName="billing" tableName="tariffs" columnName="actual" defaultValue="true"/>
        <addDefaultValue schemaName="billing" tableName="tariffs" columnName="updated_at"
                         defaultValueComputed="now()"/>
        <addDefaultValue schemaName="billing" tableName="tariffs" columnName="created_at"
                         defaultValueComputed="now()"/>

        <addForeignKeyConstraint baseTableSchemaName="billing"
                                 baseTableName="tariffs"
                                 baseColumnNames="created_by"
                                 constraintName="tariffs_created_by_fk"
                                 referencedTableSchemaName="billing"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

